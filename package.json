{
  "name": "svelte-fileapp",
  "version": "0.0.11",
  "description": "Svelte file application",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "svelte",
    "fileapp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bassim-matar/svelte-fileapp.git"
  },
  "homepage": "https://github.com/bassim-matar/svelte-fileapp/tree/main/svelte-fileapp#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "node": {
        "types": "./dist/vite/index.d.ts",
        "import": "./dist/vite/index.js"
      }
    },
    "./ssg": {
      "node": {
        "types": "./dist/ssg/index.d.ts",
        "import": "./dist/ssg/index.js"
      }
    },
    "./GenericRouter.svelte": {
      "types": "./dist/router/GenericRouter.svelte.d.ts",
      "svelte": "./dist/router/GenericRouter.svelte"
    }
  },
  "svelte": "./dist/router/GenericRouter.svelte",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "test:unit": "vitest run --exclude=test/e2e.test.ts",
    "test:e2e": "npm run build:test-app && vitest run test/e2e.test.ts",
    "test": "npm run test:unit && npm run test:e2e",
    "test:no-build": "vitest run",
    "build:test-app": "cd test-app && vite build",
    "dev:test-app": "cd test-app && vite",
    "lint": "eslint --ext .ts,.svelte",
    "type-check": "tsc --noEmit",
    "svelte-check": "svelte-check --workspace src",
    "format": "prettier --write . '!**/*.json.js'",
    "format:check": "prettier --check . '!**/*.js'",
    "check": "npm run format:check && npm run lint && npm run type-check && npm run svelte-check",
    "verify": "npm run check && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-alias": "^6.0.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24.10.1",
    "@types/serve-handler": "^6.1.4",
    "eslint": "^9.39.1",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "serve-handler": "^6.1.6",
    "svelte": "^5.45.5",
    "svelte-check": "^4.3.4",
    "svelte-eslint-parser": "^1.4.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-full-reload": "^1.2.0",
    "vitest": "^4.0.15"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "dependencies": {
    "navigo": "^8.11.1",
    "playwright": "^1.57.0",
    "serve-handler": "^6.1.6",
    "sitemap": "^9.0.0"
  }
}
